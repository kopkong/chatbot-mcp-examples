# Next.js 智能聊天机器人环境变量配置示例
# 复制此文件为 .env.local 并填入实际值

# LLM 配置
NEXT_PUBLIC_DEFAULT_LLM_PROVIDER=openai
NEXT_PUBLIC_DEFAULT_API_KEY=
NEXT_PUBLIC_DEFAULT_BASE_URL=https://api.openai.com/v1
NEXT_PUBLIC_DEFAULT_MODEL=gpt-3.5-turbo

# MCP 配置
NEXT_PUBLIC_DEFAULT_MCP_SERVER=http://localhost:1122
NEXT_PUBLIC_MCP_ENABLED=false

# 应用配置
NEXT_PUBLIC_APP_NAME=智能聊天机器人
NEXT_PUBLIC_APP_VERSION=2.0.0

# 开发配置
NODE_ENV=development
PORT=3000 